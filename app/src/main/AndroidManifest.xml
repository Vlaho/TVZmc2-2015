<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.tvz.natjecanje" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".karmapp.KarmApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="AA_DB_NAME" android:value="Donations.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />

        <activity
            android:name=".karmapp.activities.IntroActivity"
            android:label="@string/title_activity_intro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".karmapp.activities.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <receiver android:name=".karmapp.receivers.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".karmapp.receivers.TaskCheckReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="hr.tvz.natjecanje.karmapp.receivers.TaskCheckReceiver" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".karmapp.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
